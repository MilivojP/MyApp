@page "/counter"
@attribute [Authorize]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button> 
<p></p>
<AuthorizedView> 
    <Authorized>
        <span>You're auhorized ! </span>
    </Authorized>
    <NotAuthorized>
        <span>You're not auhorized, buddy.</span>
    </NotAuthorized>
</AuthorizedView>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
